<mapper namespace="com.kt.smp.stt.recognition.mapper.SttRecognitionMapper">

    <select id="getRecognitionDetail" parameterType="SttRecognitionSearchCondition" resultType="sttRecognitionDetailVO">
	/* SttRecognitionMapper.getRecognitionDetail */
		SELECT
			A.ID verifyId
			, A.DESCRIPTION verifyName
			, A.END_AT endAt
			, A.NAME datasetName
			, A.DATASET_ID datasetId
			, A.RESULT_MODEL_ID resultModelId
			, A.CER avgCer
		FROM ( 
			SELECT
				H.ID
				, H.DESCRIPTION
				, H.END_AT
				, H.DEPLOY_ID
				, D.NAME
				, H.DATASET_ID
				, to_char(H.REG_DT, 'yyyy-mm-dd') RESULT_MODEL_ID
				, H.CER
				,ROW_NUMBER() over(PARTITION BY H.DATASET_ID,to_char(H.REG_DT, 'yyyy-mm-dd') ORDER BY H.ID desc) rn
			FROM IAAP_STT_VERIFY_HISTORY H
			LEFT OUTER JOIN IAAP_STT_VERIFY_DATASET D ON H.DATASET_ID = D.ID
			WHERE 1=1 
				AND H.SERVICE_MODEL_ID = #{serviceCode}
				AND H.SAVE_YN = 'Y'
				AND H.STATUS = 'COMPLETE'
				<if test="from != null">
					AND H.REG_DT <![CDATA[ >= ]]> TO_DATE(#{from} || ' 00:00:00', 'YYYY-MM-DD HH24:MI:SS')
				</if>
				<if test="to != null">
					AND H.REG_DT <![CDATA[ <= ]]> TO_DATE(#{to} || ' 23:59:59', 'YYYY-MM-DD HH24:MI:SS')
				</if>
		) A
		where rn = 1
    </select>
    
