<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kt.smp.common.mapper.BaseMapper">
	<!-- 221012 신우성 등록/수정자에 사번 -> 성명(사번) 표시에 사용할 데이터셋 추가(이 파일 추가) -->
	<!-- 221014 쿼리 CONCAT에 괄호 앞에 공백 추가, 성명(사번) -> 성명 (사번) 형식으로 표시됨 -->
	<select id="empList" resultType="com.kt.smp.common.domain.BaseModel">
		SELECT
			USR_ID AS regId
		   ,CONCAT(USR_NM, ' (', USR_ID, ')') AS korNm
	  	FROM IAAP_CM_USER
	 	GROUP BY USR_ID
	</select>
	<!-- 수정 끝 -->
	<!-- 수정 끝 -->

</mapper>
